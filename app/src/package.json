{
  "name": "xueer-fe",
  "version": "0.0.1",
  "description": "the front-end template of xueer desktop",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:js": "browserify js/main.js -t babelify --outfile ../static/js/main.js",
    "postbuild:jsxx": "uglifyjs --compress  --output ../static/js/main.min.js -- ../static/js/main.js",
    "build:css": "node-sass  --output-style compressed scss/pages/ --output ../static/css",
    "css": "sass --watch --no-cache scss/pages/:../static/css --style nested",
    "watch:css": "watch 'npm run build:css' scss/*",
    "watch:js": "watch 'npm run build:js' js/",
    "build": "npm run build:css && npm run build:js",
    "watch": "parallelshell 'npm run watch:css' 'npm run watch:js' 'npm run livereload'",
    "livereload": "live-reload --port 9091 ./"
  },
  "author": "Muxistudio FE team",
  "license": "ISC",
  "dependencies": {
    "babelify": "^6.4.0",
    "browserify": "^12.0.1",
    "jquery": "^2.1.4",
    "live-reload": "^1.1.0",
    "mockjs": "^0.1.10",
    "node-sass": "^3.4.2",
    "parallelshell": "^2.0.0",
    "react": "^0.14.3",
    "react-addons-css-transition-group": "^0.14.2",
    "react-dom": "^0.14.2",
    "watch": "^0.16.0",
    "watchify": "^3.6.0"
  },
  "devDependencies": {
    "babelify": "^7.2.0",
    "jquery": "^2.1.4"
  }
}
